<?xml version="1.0" encoding="utf-8"?>
<full-backup-content>
    <!-- Include your SQLite database -->
    <include domain="database" path="finance3.db" />
    
    <!-- Include SharedPreferences for user settings -->
    <include domain="sharedpref" path="." />
    
    <!-- Exclude Flutter's internal files that don't need backup -->
    <exclude domain="file" path="flutter_assets/" />
    <exclude domain="file" path="cache/" />
    <exclude domain="file" path="app_flutter/" />
    
    <!-- Exclude temporary files -->
    <exclude domain="database" path="temp.db" />
    <exclude domain="file" path="logs/" />
</full-backup-content>