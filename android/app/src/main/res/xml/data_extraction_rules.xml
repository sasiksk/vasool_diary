<?xml version="1.0" encoding="utf-8"?>
<data-extraction-rules>
    <!-- Rules for cloud backup (Android Auto Backup) -->
    <cloud-backup>
        <!-- Include your database file -->
        <include domain="database" path="finance3.db"/>
        
        <!-- Include SharedPreferences -->
        <include domain="sharedpref" path="."/>
        
        <!-- Exclude sensitive or temporary data -->
        <exclude domain="file" path="cache/"/>
        <exclude domain="file" path="logs/"/>
    </cloud-backup>
    
    <!-- Rules for device-to-device transfer -->
    <device-transfer>
        <!-- Include your database file -->
        <include domain="database" path="finance3.db"/>
        
        <!-- Include SharedPreferences -->
        <include domain="sharedpref" path="."/>
        
        <!-- Exclude sensitive or temporary data -->
        <exclude domain="file" path="cache/"/>
        <exclude domain="file" path="logs/"/>
    </device-transfer>
</data-extraction-rules>